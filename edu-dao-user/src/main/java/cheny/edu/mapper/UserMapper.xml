<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cheny.edu.dao.UserDao">

    <resultMap id="BaseResultMap" type="cheny.edu.common.po.User">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="nickName" property="nickName" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phoneNum" property="phoneNum" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="saveUser" parameterType="cheny.edu.common.po.User">
        insert into eims_user (
            id,
            nickName,
            username,
            password,
            email,
            phoneNum
        )
        values (
            #{id,jdbcType=VARCHAR},
            #{nickname,jdbcType=VARCHAR},
            #{username,jdbcType=VARCHAR},
            #{password,jdbcType=VARCHAR},
            #{email,jdbcType=VARCHAR},
            #{phonenum,jdbcType=VARCHAR}
        )
    </insert>

    <delete id="deleteUserById" parameterType="java.lang.String">
        delete from eims_user
        where ID = #{id,jdbcType=VARCHAR}
    </delete>

    <update id="updateUser" parameterType="cheny.edu.common.po.User">
        update eims_user
        <set>
            id=#{id,jdbcType=VARCHAR},
            nickName=#{nickname,jdbcType=VARCHAR},
            username=#{username,jdbcType=VARCHAR},
            password=#{password,jdbcType=VARCHAR},
            email=#{email,jdbcType=VARCHAR},
            phoneNum=#{phonenum,jdbcType=VARCHAR}
        </set>
        where ID = #{id,jdbcType=VARCHAR}
    </update>

</mapper>